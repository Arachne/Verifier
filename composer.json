{
    "name": "arachne/verifier",
    "description": "Requirements verification for nette/application actions and components.",
    "type": "library",
    "keywords": [ "nette", "arachne", "security" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "arachne/service-collections": "^0.1.0",
        "nette/application": "^2.4.0",
        "nette/di": "^2.4.10",
        "nette/utils": "^2.4.0"
    },
    "require-dev": {
        "arachne/codeception": "^0.7.3",
        "codeception/codeception": "^2.3.2",
        "doctrine/annotations": "^1.3.0",
        "eloquent/phony": "^2.0.0",
        "eloquent/phony-phpunit": "^3.0.0",
        "friendsofphp/php-cs-fixer": "^2.7.0@dev",
        "kdyby/annotations": "^2.3.0",
        "latte/latte": "^2.4.0",
        "phpstan/phpstan": "^0.8.5",
        "phpstan/phpstan-nette": "^0.8.3"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\Verifier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/src",
            "Tests\\Functional\\": "tests/functional/src"
        },
        "files": [
            "vendor/codeception/codeception/shim.php"
        ]
    },
    "scripts": {
        "ci": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "\"vendor/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor/bin/phpstan\" analyse --no-progress --level=7 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
